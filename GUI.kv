<GUI>:
    BoxLayout:
        id: box_id
        orientation: "vertical"
        padding: 10
        spacing: 10
        canvas.before:
            Color:
                rgb: 0.8, 0.87, .93
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            id: distance
            halign: 'center'
            valign: 'middle'
            canvas.before:
                Color:
                    rgb: 1, .6, .2
                Rectangle:
                    pos: self.pos
                    size: self.size
            text:"[size=70][b]Cargando informacion [/b][/size]"
            markup: True

        Label:
            id: response
            halign: 'center'
            valign: 'middle'
            canvas.before:
                Color:
                    rgb: 1, .6, .2
                Rectangle:
                    pos: self.pos
                    size: self.size
            text:"[size=70][b]Cargando informacion [/b][/size]"
            markup: True

        Label:
            id: metrics
            halign: 'center'
            valign: 'middle'
            canvas.before:
                Color:
                    rgb: 1, .6, .2
                Rectangle:
                    pos: self.pos
                    size: self.size
            text:"[size=70][b]Cargando informacion [/b][/size]"
            markup: True


